
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <Button
        android:id="@+id/evaluation_editor_ok_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="saveEvaluationEditor"
        android:text="Ok"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/evaluation_editor_cancel_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="backEvaluationEditor"
        android:text="Cancel"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/evaluation_editor_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/evaluation_editor_name_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluation_editor_name_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/black"
        android:textSize="16dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/evaluation_editor_weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluation_editor_name_box"
		android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Weight"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/evaluation_editor_weight_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluation_editor_weight_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textSize="16dp" />



    <TextView
        android:id="@+id/evaluation_editor_comments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluation_editor_weight_box"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Comments"
        android:textColor="@android:color/white"
        android:textSize="20dp" />




    <EditText
        android:id="@+id/evaluation_editor_comments_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/evaluation_editor_ok_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/evaluation_editor_comments_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</RelativeLayout>

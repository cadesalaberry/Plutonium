<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >




    <ListView
        android:id="@+id/course_selection_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:background="#FFFFFF"
        android:divider="#000000"
        android:dividerHeight="1dp" >

    </ListView>


    <TextView
        android:id="@+id/TGPA_Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_semester_button"
        android:layout_alignBottom="@+id/new_semester_button"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:ems="10" />

    <Button
        android:id="@+id/course_selection_back_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="20dp"
        android:onClick="backCourseSelection"
        android:text="Back"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/course_selection_add_course_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_selection_back_button"
        android:layout_alignBottom="@+id/course_selection_back_button"
        android:layout_marginLeft="20dp"
        android:onClick="addCourseCourseSelection"
        android:text="Add Course"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/TGPA_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/course_selection_add_course_button"
        android:text="Term GPA"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
    
        <TextView
        android:id="@+id/Semester_Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_semester_button"
        android:layout_alignBottom="@+id/new_semester_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="160dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:ems="10" />

</RelativeLayout>

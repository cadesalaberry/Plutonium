
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >


    <ListView
        android:id="@+id/evaluation_selection_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluation_selection_add_button"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:divider="#000000"
        android:dividerHeight="1dp" >

    </ListView>

    <Button
        android:id="@+id/evaluation_selection_add_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/evaluation_selection_list"
        android:layout_alignParentTop="true"
        android:onClick="addEvaluationSelection"
        android:text="Add Evaluation"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/evaluation_selection_back_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/evaluation_selection_list"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/evaluation_selection_list"
        android:onClick="backEvaluationSelection"
        android:text="Back"
        android:textColor="#FFFFFF" />

</RelativeLayout>
